<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_fragment_container"
    android:background="@color/googleGreen"
    tools:context="com.donotauthenticatemyapp.teamaccountmanager.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fading_blury_wood"
        >

        <!--horizontal divider-->
        <android.support.v4.widget.Space
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:id="@+id/login_dividerHorizontal"
            />


        <!--vertical divider-->
        <android.support.v4.widget.Space
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:layout_centerInParent="true"
            android:id="@+id/login_dividerVertical"
            />

        <!--top green-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/login_dividerHorizontal"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/background_shadow"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                app:civ_shadow="true"
                app:civ_shadow_radius="20"
                app:civ_shadow_color="@color/black"
                android:background="@drawable/admin"
                android:id="@+id/login_adminImage"
                />

            <util.android.textviews.FontTextView
                android:id="@+id/login_adminTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owner1"
                style="@style/MyCustomTextStyleMedium"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_adminImage"
                android:padding="@dimen/generalPaddingFive"
                />

        </RelativeLayout>


        <!--bottom orange-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/login_dividerHorizontal"
            android:background="@drawable/background_shadow_2"
            android:layout_marginTop="80dp"
            android:layout_alignEnd="@+id/login_dividerVertical"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            >

            <!--worker-->
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                app:civ_shadow="true"
                app:civ_shadow_radius="20"
                app:civ_shadow_color="@color/black"
                android:background="@drawable/worker"
                android:id="@+id/adh_addAangadiaButton"
                />

            <util.android.textviews.FontTextView
                android:id="@+id/login_angadiaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aangadia"
                style="@style/MyCustomTextStyleMedium"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/adh_addAangadiaButton"
                android:padding="@dimen/generalPaddingFive"
                />

        </RelativeLayout>


        <!--user-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/login_dividerHorizontal"
            android:background="@drawable/background_shadow_2"
            android:layout_marginTop="80dp"
            android:layout_alignStart="@+id/login_dividerVertical"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            app:civ_shadow="true"
            app:civ_shadow_radius="20"
            app:civ_shadow_color="@color/black"
            android:background="@drawable/user"
            android:id="@+id/adh_allAngadiaImage"
            />

        <util.android.textviews.FontTextView
            android:id="@+id/login_userTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            style="@style/MyCustomTextStyleMedium"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/adh_allAngadiaImage"
            android:padding="@dimen/generalPaddingFive"
            />

    </RelativeLayout>


    </RelativeLayout>




</FrameLayout>
