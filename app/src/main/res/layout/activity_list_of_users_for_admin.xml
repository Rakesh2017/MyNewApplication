<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container_list_of_users_for-admin"
    tools:context=".ListOfUsersForAdmin">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/lou_main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/whiteSmoke"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/lou_main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/white"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:background="@color/whiteSmoke"
            tools:targetApi="lollipop">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appColor"
                >

                <ImageButton
                    android:id="@+id/lou_backImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_back"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    />

                <ImageButton
                    android:id="@+id/lou_resetImageButton"
                    android:layout_toEndOf="@+id/lou_backImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_reset"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usersList"
                    android:textStyle="bold"
                    style="@style/MyCustomTextStyleMedium"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:padding="8dp"
                    />

                <LinearLayout
                    android:id="@+id/loa_linearLayout"
                    android:layout_below="@+id/lou_backImageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@color/appColor"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="7dp"
                    >

                    <!--state-->
                    <AutoCompleteTextView
                        android:id="@+id/lou_state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MyCustomEditTextStyle"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="State"
                        android:inputType="text"
                        android:gravity="center"
                        android:elevation="@dimen/elevation_5"
                        tools:targetApi="lollipop"
                        tools:ignore="LabelFor" />

                    <!--city-->
                    <AutoCompleteTextView
                        android:id="@+id/lou_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/MyCustomEditTextStyle"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="City"
                        android:gravity="center"
                        android:inputType="text"
                        android:elevation="@dimen/elevation_5"
                        tools:targetApi="lollipop"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loa_linearLayout1"
                    android:layout_below="@+id/loa_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@color/appColor"
                    android:layout_marginBottom="7dp"
                    >

                    <!--aangdia user name-->
                    <EditText
                        android:id="@+id/lou_aangadiaName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        style="@style/MyCustomEditTextStyle"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="Aangadia User Name"
                        android:inputType="textCapWords"
                        android:gravity="center"
                        android:elevation="@dimen/elevation_5"
                        tools:targetApi="lollipop"
                        tools:ignore="LabelFor" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_search"
                        android:layout_gravity="center|end"
                        />
                </LinearLayout>

            </RelativeLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appColor"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/lou_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appColor"
            />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
